
CXX		= $(GALLERY_FMWK_CXX)
LD              = g++
LDFLAGS         += -Wl,-rpath,$(GALLERY_FMWK_BASEDIR)/lib
FFLAGS          += -Wall
FLDFLAGS        += -lstdc++ -shared 
CXXFLAGS        += -g -O3 -std=c++0x -W -Wall -Wno-register -Wno-unused-function -Wno-deprecated -fPIC -D_CORE_$(shell uname -s)_
SOMAKER         = g++
SOFLAGS         = -g -fPIC -shared
